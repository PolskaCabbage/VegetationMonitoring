@model VegetationMonitoring.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div style="    
    height: 0px;
    position: relative;
    right: 120px;
    top: 8px;
    ">
    <img src="~/images/cloca logo sm.png" />
</div>

<address>
    Central Lake Ontario Conservation Authority<br />
    100 Whiting Ave. <br />
    Oshawa, Ontario <br />
    L1H 3T3 <br /><br />
    <abbr title="Phone">P:</abbr>
    (905) 579-0411
</address>

<address>
    <strong>email:</strong> <a href="mailto:support@cloca.com">support@cloca.com</a><br />
</address>

<form method="post">
    <span asp-validation-summary="ModelOnly" class="NotifyRequired"></span><br />

    <label asp-for="Name">Name</label><br />
    <input asp-for="Name"/>
    <span asp-validation-for="Name" class="NotifyRequired"></span>
    <br />

    <label asp-for="Email">Email</label><br />
    <input asp-for="Email" type="email" />
    <span asp-validation-for="Email" class="NotifyRequired"></span>
    <br />

    <label asp-for="Body">Message</label><br />
    <textarea asp-for="Body" cols="40" rows="4"></textarea><span asp-validation-for="Body" class="NotifyRequired"></span><br />
    <div><input type="submit" value="Send Message" /></div>
    
</form>
